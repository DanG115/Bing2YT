{
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/cli": "^4.1.18",
    "@types/chrome": "^0.0.326",
    "autoprefixer": "^10.4.23",
    "cpx": "^1.5.0",
    "postcss": "^8.4.47",
    "rollup": "^2.79.2",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "clean": "rimraf extension",
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./extension/dist/content/styles/output.css --minify",
    "build:static": "cpx \"src/manifest.json\" extension/dist/ && cpx \"src/content/assets/**/*\" extension/dist/assets && cpx \"src/content/pages/**/*\" extension/dist/content/pages/",
    "build:bundle": "rollup -c",
    "build": "npm run build:css && npm run build:ts && npm run build:bundle && npm run build:static"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^12.3.0"
  }
}
